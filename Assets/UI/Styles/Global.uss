* {
    margin: 0;
    padding: 0;
}

.background {
    background-color: rgb(27, 29, 29);
    padding: 48px;
    width: 100%;
    height: 100%;
}

Button {
    border-color: #fff;
    color: #000;
    border-radius: 16px;
    border-width: 0;
    background-color: white;
    min-height: 84px;
    font-size: 32px;
    -unity-font-style: bold;
    transition: all 0.2s;
}

Button:focus {
    border-width: 4px;
    color: #fff;
}