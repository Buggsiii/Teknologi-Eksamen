.games-list {
    flex-direction: row;
}

.game-btn {
    flex-grow: 1;
    -unity-font-style: bold;
    background-color: #fff;
    font-size: 24px;
    border-color: #000000;
    border-width: 1px;
    border-radius: 0px;
    overflow: hidden;
    transition: all 0.5s ease-in-out;
}

.game-btn:hover {
    flex-grow: 2;
}
